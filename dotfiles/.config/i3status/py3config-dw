	charging_character = '⌁'
	format = '{percent}'
	#hide_when_full = True
	#measurement_mode = 'sys'
	
	threshold_bad = 10
	threshold_degraded = 30
	threshold_full = 95

	color_good = '#0000AA'
	color_degraded = '#AAAA00'
	color_bad = '#AA0000'
	color_charging = '#0000FF'
}
