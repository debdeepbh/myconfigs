# A frame showing times in different cities.
# We also have a button to hide/show the content
frame time {

   #background = '#550000'
    format = '{output}{button}'
    format_separator = ' '  # have space instead of usual i3bar separator

    tztime la {
        format = "LA %H:%M"
        timezone = "America/Los_Angeles"
    }
    tztime ny {
        format = "NY %H:%M"
        timezone = "America/New_York"
    }
    tztime du {
        format = "DU %H:%M"
        timezone = "Asia/Dubai"
    }

}


# cycle through different timezone hours every 10s
group tz {

#background = '#af3a03'
    cycle = 10
    format = "{output}"

    #button_next = 1
    #click_mode = "button"
    #click_mode = "all"

    tztime la {
        format = "LA %H:%M"
        timezone = "America/Los_Angeles"
    }

    tztime ny {
        format = "NY %H:%M"
        timezone = "America/New_York"
    }

    tztime du {
        format = "DU %H:%M"
        timezone = "Asia/Dubai"
    }
}

