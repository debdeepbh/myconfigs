# reload the i3 config when I left click on the i3status time module
# and restart i3 when I middle click on it
time {
#background = '#af3a03'
    format = "%b %d %a %l:%M"
    #on_click 1 = "reload"

    on_click 1 = "exec zenity --calendar --text="

    on_click 2 = "restart"
}

