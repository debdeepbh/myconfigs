## Marks
# set mark
bindsym $mod+m exec i3-msg mark $(rofi -dmenu -lines 0 -p 'set mark')
# read 1 character and go to the window with the character
#bindsym $mod+apostrophe exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '
#bindsym $mod+apostrophe exec i3-msg [con_mark="$(rofi -dmenu -lines 0 -p 'choose mark')"] focus
# jump to a mark
bindsym $mod+apostrophe exec i3-msg [con_mark="$($scr_mark_sel)"] focus; exec $update_file
# move current window to a mark (similar to mod+j vs mod+shift+j)
bindsym $mod+shift+apostrophe exec i3-msg move window to mark $($scr_mark_sel)

# move current container to a window
bindsym $mod+shift+w exec i3-msg move container to workspace $(rofi -dmenu -lines 0 -p 'move to workspace')

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+t floating toggle

# toggle sticky for floating window, e.g. video chat window
bindsym $mod+shift+s sticky toggle

# rename workspace
#bindsym $mod+F2 exec i3-input -F 'rename workspace to "%s"' -P 'New name: '
bindsym $mod+F2 exec i3-msg rename workspace to $(rofi -dmenu -lines 0 -p 'New name')

# focus the parent container
bindsym $mod+p focus parent; exec $update_file
# focus the child container
bindsym $mod+c focus child; exec $update_file

